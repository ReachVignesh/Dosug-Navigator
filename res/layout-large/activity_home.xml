<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/background" android:weightSum="1">

    <Button android:layout_width="80dip"
            android:layout_height="35dip"
            android:text="Log out"
            android:textSize="16sp"
            android:textColor="#fff9f9fd"
            android:textStyle="bold"
            android:id="@+id/btnLogout"
            android:layout_gravity="right"
            android:layout_margin="5dip"
            android:visibility="gone"/>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dip"
            android:visibility="visible"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Dosug Navigator"
              android:id="@+id/app_name"
              android:textSize="45sp"
              android:gravity="center"
              android:singleLine="false"
              android:textColor="@android:color/primary_text_dark" android:layout_marginBottom="10dip"
              android:visibility="visible"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:visibility="visible"
                    android:layout_marginTop="2dip"
                    android:layout_width="320dip"
                    android:layout_weight="0.10">
        <ImageButton

                android:id="@+id/btnA"
                android:background="@drawable/a"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        <ImageButton

                android:id="@+id/btnC"
                android:background="@drawable/c"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"/>

        <ImageButton
                android:id="@+id/btnB"
                android:background="@drawable/b"
                android:layout_width="90dip"
                android:layout_height="90dip" android:layout_marginLeft="110dip"/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:visibility="visible"
                    android:layout_width="320dip"
                    android:layout_marginTop="2dip"
                    android:layout_weight="0.10">
        <ImageButton

                android:id="@+id/btnD"
                android:background="@drawable/d"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        <ImageButton

                android:id="@+id/btnE"
                android:background="@drawable/e"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"/>

        <ImageButton
                android:id="@+id/btnF"
                android:background="@drawable/f"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_marginLeft="110dip"/>

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:clipChildren="false"
                    android:visibility="visible"
                    android:layout_width="320dip"
                    android:layout_weight="0.10">
        <ImageButton

                android:id="@+id/btnG"
                android:background="@drawable/g"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        <ImageButton

                android:id="@+id/btnI"
                android:background="@drawable/i"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"/>

        <ImageButton
                android:id="@+id/btnH"
                android:background="@drawable/h"
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_marginLeft="110dip"/>

    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Copy Right"
            android:id="@+id/textCopyRight"
            android:textSize="17sp"
            android:layout_marginTop="5dip"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#fffdb143"/>

</LinearLayout>