<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/background">

    <RelativeLayout
            android:paddingTop="15.0dip"
            android:paddingBottom="20.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#41ff0016"
            android:layout_centerInParent="true">

        <TextView
                android:textSize="18.0sp"
                android:textColor="#FF000000"
                android:gravity="center"
                android:id="@+id/lblAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="about_title"
                android:layout_centerHorizontal="true" android:visibility="gone"/>
        <TextView
                android:textSize="18.0sp"
                android:gravity="center"
                android:autoLink="web"
                android:id="@+id/easyprintLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="client_link"
                android:layout_below="@+id/lblAboutTitle"
                android:layout_centerHorizontal="true" android:visibility="gone"/>
        <TextView
                android:textSize="18.0sp"
                android:gravity="center"
                android:autoLink="web"
                android:id="@+id/siteLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="www.dosugnavigator.kz"
                android:layout_below="@+id/easyprintLink"
                android:layout_centerHorizontal="true"
                android:textColor="#bbf52b10"/>
        <TextView
                android:textColor="#fff9f9fd"
                android:gravity="center"
                android:id="@+id/lblVersionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="1.0"
                android:layout_below="@+id/siteLink"
                android:layout_centerHorizontal="true" />
        <TextView
                android:textColor="#FF000000"
                android:gravity="center"
                android:id="@+id/txtAboutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.0dip"
                android:layout_marginTop="18.0dip"
                android:layout_marginRight="32.0dip"
                android:layout_marginBottom="18.0dip"
                android:text="about_text"
                android:layout_below="@+id/lblVersionName"
                android:layout_centerHorizontal="true" android:visibility="gone"/>
        <TextView
                android:textColor="#fffd7324"
                android:gravity="center"
                android:id="@+id/lblCallUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call us"
                android:layout_below="@+id/txtAboutText"
                android:layout_centerHorizontal="true" />
        <TextView
                android:gravity="center"
                android:autoLink="phone"
                android:id="@+id/txtAboutPhones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:textColor="#fff9f9fd"
                android:text="+1 123456789"
                android:layout_below="@+id/lblCallUs"
                android:layout_centerHorizontal="true" />
        <TextView
                android:textColor="#fff9f9fd"
                android:gravity="center"
                android:id="@+id/lblOr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="or"
                android:layout_below="@+id/txtAboutPhones"
                android:layout_centerHorizontal="true" />
        <Button
                android:gravity="center"
                android:id="@+id/btnEmailUs"
                android:background="@drawable/emailus"
                android:textColor="#fff9f9fd"
                android:layout_width="190dip"
                android:layout_height="30dip"
                android:layout_marginLeft="32.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="32.0dip"
                android:text="Email us"
                android:layout_below="@+id/lblOr" android:layout_centerInParent="true" />
    </RelativeLayout>

    </RelativeLayout>
